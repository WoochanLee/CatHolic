<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.woody.cat.holic">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".framework.CatHolicApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CatHolic">

        <!--<service
            android:name=".framework.CatHolicFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>-->

        <activity android:name=".presentation.main.user.profile.photo.UserPhotoActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".presentation.main.user.profile.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.upload.UploadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.main.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.main.user.myphoto.MyPhotoActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>