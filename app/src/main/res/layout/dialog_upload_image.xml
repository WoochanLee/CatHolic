<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.woody.cat.holic.presentation.upload.dialog.UploadImageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="#aaaaaa"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_upload_dialog_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{`` + viewModel.currentImageCount + ` / ` + viewModel.totalImageCount}"
                android:textSize="14dp"
                tools:text="1 / 10" />

            <ImageView
                android:id="@+id/iv_upload_dialog_current_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                tools:src="@mipmap/ic_launcher" />

            <ProgressBar
                android:id="@+id/pb_upload_dialog_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:progress="@{viewModel.currentProgress}"
                tools:progress="50" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>